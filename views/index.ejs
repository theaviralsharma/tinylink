<% layout('layout') %>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
  <div
    class="lg:col-span-1 bg-white dark:bg-slate-800 rounded-lg p-6 card-shadow border border-slate-100 dark:border-slate-700"
  >
    <h2 class="text-xl font-semibold mb-3">Create Short Link</h2>

    <% if (typeof error !== 'undefined') { %>
    <div
      class="mb-3 text-sm text-red-700 bg-red-100 dark:bg-red-900/40 dark:text-red-300 p-2 rounded"
    >
      <%= error %>
    </div>
    <% } %>

    <form action="/create" method="post" class="space-y-3">
      <div>
        <label
          class="block text-sm font-medium text-slate-700 dark:text-slate-300"
          >Target URL</label
        >
        <input
          name="target_url"
          required
          class="mt-1 block w-full rounded-md border border-slate-200 dark:border-slate-700 bg-white dark:bg-slate-900/60 px-3 py-2 shadow-sm focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500"
          placeholder="https://example.com"
        />
      </div>

      <div>
        <label
          class="block text-sm font-medium text-slate-700 dark:text-slate-300"
          >Custom Code (optional)</label
        >
        <input
          name="code"
          pattern="[A-Za-z0-9]{6,8}"
          title="6-8 letters or numbers"
          class="mt-1 block w-full rounded-md border border-slate-200 dark:border-slate-700 bg-white dark:bg-slate-900/60 px-3 py-2 shadow-sm focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500"
          placeholder="6-8 alphanumeric"
        />
        <p class="text-xs text-slate-400 dark:text-slate-400/80 mt-1">
          Only letters & numbers, length 6–8.
        </p>
      </div>

      <div class="flex items-center gap-2">
        <button
          type="submit"
          class="inline-flex items-center gap-2 bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700 focus:ring-indigo-300"
        >
          Create
        </button>
        <a
          href="/"
          class="text-sm text-slate-600 dark:text-slate-300 hover:underline"
          >Reset</a
        >
      </div>
    </form>

    <div class="mt-6 text-xs text-slate-400 dark:text-slate-400">
      Tip: Use the API at
      <code class="bg-slate-100 dark:bg-slate-700/60 px-1 rounded"
        >{BASE_URL}/api/links</code
      >
    </div>
  </div>

  <div class="lg:col-span-2">
    <div
      class="bg-white dark:bg-slate-800 rounded-lg p-4 card-shadow border border-slate-100 dark:border-slate-700"
    >
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-xl font-semibold">Links</h2>
        <div class="text-sm text-slate-500 dark:text-slate-300/70">
          <%= links ? links.length : 0 %> total
        </div>
      </div>

      <% if (!links || links.length === 0) { %>
      <div class="p-8 text-center text-slate-500 dark:text-slate-300/70">
        No links yet — create one on the left.
      </div>
      <% } else { %>
      <div class="table-scroll">
        <table class="min-w-full text-sm">
          <thead class="bg-slate-50 dark:bg-slate-900/40">
            <tr>
              <th
                class="px-4 py-2 text-left text-xs font-medium text-slate-600 dark:text-slate-300/80"
              >
                Code
              </th>
              <th
                class="px-4 py-2 text-left text-xs font-medium text-slate-600 dark:text-slate-300/80"
              >
                Short
              </th>
              <th
                class="px-4 py-2 text-left text-xs font-medium text-slate-600 dark:text-slate-300/80"
              >
                Target
              </th>
              <th
                class="px-4 py-2 text-right text-xs font-medium text-slate-600 dark:text-slate-300/80"
              >
                Clicks
              </th>
              <th
                class="px-4 py-2 text-left text-xs font-medium text-slate-600 dark:text-slate-300/80"
              >
                Last clicked
              </th>
              <th
                class="px-4 py-2 text-right text-xs font-medium text-slate-600 dark:text-slate-300/80"
              >
                Actions
              </th>
            </tr>
          </thead>

          <tbody>
            <% links.forEach(link => { %>
            <tr class="hover:bg-slate-50 dark:hover:bg-slate-700/50">
              <td
                class="px-4 py-3 whitespace-nowrap font-medium text-slate-800 dark:text-slate-100"
              >
                <%= link.code %>
              </td>
              <td
                class="px-4 py-3 whitespace-nowrap text-sm text-indigo-600 dark:text-indigo-400"
              >
                <a
                  target="_blank"
                  href="<%= baseUrl %>/<%= link.code %>"
                  class="hover:underline"
                  ><%= baseUrl %>/<%= link.code %></a
                >
              </td>
              <td
                class="px-4 py-3 text-sm text-slate-700 dark:text-slate-200 max-w-xl truncate-ellipsis"
                title="<%= link.target_url %>"
              >
                <%= link.target_url %>
              </td>
              <td
                class="px-4 py-3 text-sm text-right text-slate-700 dark:text-slate-200"
              >
                <%= link.total_clicks %>
              </td>
              <td class="px-4 py-3 text-sm text-slate-700 dark:text-slate-200">
                <%= link.last_clicked ? new
                Date(link.last_clicked).toLocaleString("en-IN", { timeZone:
                "Asia/Kolkata" }) : '—' %>
              </td>
              <td class="px-4 py-3 text-right">
                <a
                  href="/code/<%= link.code %>"
                  class="text-sm text-slate-600 dark:text-slate-200 hover:underline mr-3"
                  >Stats</a
                >

                <form
                  action="/code/<%= link.code %>?_method=DELETE"
                  method="POST"
                  class="inline"
                >
                  <button
                    type="submit"
                    onclick="return confirm('Delete?')"
                    class="text-sm text-red-600 dark:text-red-400 hover:underline"
                  >
                    Delete
                  </button>
                </form>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
      <% } %>
    </div>
  </div>
</div>
