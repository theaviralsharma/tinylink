<% layout('layout') %>

<div class="min-h-[60vh] flex items-center justify-center">
  <div class="bg-white dark:bg-slate-800 rounded-lg p-8 card-shadow border border-slate-100 dark:border-slate-700 max-w-xl text-center">
    <div class="text-6xl font-extrabold text-indigo-600 dark:text-indigo-400 mb-4">404</div>
    <h2 class="text-2xl font-semibold mb-2">Page not found</h2>
    <p class="text-sm text-slate-600 dark:text-slate-300/70 mb-6">
      <%= message || "The link you're looking for doesn't exist or has been removed." %>
    </p>

    <div class="flex items-center justify-center gap-3">
      <a href="/" class="inline-flex items-center gap-2 bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700">
        Back to dashboard
      </a>

      <a href="/healthz" class="text-sm text-slate-600 dark:text-slate-300 hover:underline">
        Health check
      </a>
    </div>
  </div>
</div>
